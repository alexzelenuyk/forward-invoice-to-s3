{
  "name": "forward-invoice-to-s3",
  "version": "1.0.0",
  "description": "Store important invoices in durable S3",
  "main": "app.ts",
  "repository": "https://github.com/alexzelenuyk/forward-invoice-to-s3",
  "author": "Oleksii Zeleniuk",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.392.0",
    "mailparser": "^2.7.6"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.json",
    "postbuild": "yarn install --modules-folder ./.build/node_modules --prod",
    "lint": "tslint --project ./tsconfig.json --config ./tslint.json",
    "lint:fix": "prettier --write ./**/{**/**/*,**/*,*}.ts",
    "lint:cfn": "cfn-lint validate sam/template.yaml"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^24.0.23",
    "@types/mailparser": "^2.4.0",
    "@types/node": "^10.12.18",
    "cfn-lint": "^1.9.4",
    "jest": "^23.6.0",
    "prettier": "^1.16.1",
    "prettier-tslint": "^0.4.2",
    "ts-jest": "^23.10.5",
    "tsc": "^1.20150623.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  },
  "jest": {
    "rootDir": "./test",
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": ".*.test.ts$",
    "moduleDirectories": [
      "node_modules",
      "./src",
      "./test"
    ]
  }
}
